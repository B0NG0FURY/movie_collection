<h2>Add a movie to your collection</h2>

<form method="post" action="/movies">
    <label for="movie[name]">Name: </label>
    <input type="text" name="movie[name]"></input>
    </br></br>
    <label for="movie[year]">Year: </label>
    <input type="text" name="movie[year]"></input>
    </br></br>
    <label for="director[name]">Director: </label>
    <input type="text" name="director[name]"></input>
    </br></br>
    <label for="movie[description]">Description: </label>
    <textarea rows="4" cols="25" name="movie[description]"></textarea>
    </br></br>
    <p>Genres:</p>
    <% @genres.each do |genre| %>
    <input type="checkbox" name="movie[genre_ids][]" value="<%= genre.id %>"><%= genre.name %></input>
    <% end %>
    </br></br>
    <p>Formats:</p>
    <% @formats.each do |format| %>
    <input type="checkbox" name="movie[format_ids][]" value="<%= format.id %>"><%= format.name %></input>
    <% end %>
    </br></br>
    <input type="submit" value="Add Movie"></input>
</form>
</br></br>

