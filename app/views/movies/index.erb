<% if flash.has?(:delete) %>
<%= flash[:delete] %>
<% end %>

<h2>All Movies</h2>
<% if !@user.movies.empty? %>

<p class="list">
        <% @movies.each do |movie|%>
        <h4><a href="/movies/<%= movie.slug %>"><%= movie.name %></a></h4>
        <br>
        <% end %>
</p>

<% else %>

<p>Whole Lotta Nothin' Goin' On Here. Add Some Movies Will Ya?!</p>
<p><a href="/movies/new">Add Movie</a></p>

<% end %>

<a href="/user">Home</a>
<a href="/user/logout">Logout</a>